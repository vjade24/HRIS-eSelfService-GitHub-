    <style>
        .dial {
            position: relative;
            width: 300px;
            height: 300px;
            background: #ececec;
            border: 12px solid #5c5;
            border-radius: 50%;
            margin: 8% auto 0;
            box-shadow: 1px 14px 21px 0 rgba(0,0,0,.2);
        }

        span {
            display: inline-block;
        }

        .dot {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            margin: auto;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            background: radial-gradient(ellipse 20px 15px at 50% 0, #ececec 40%, #5c5c5c 80%);
            z-index: 10;
            box-shadow: 0 2px 5px 0 rgba(0,0,0,.3);
        }


        .sec-hand {
            position: absolute;
            top: 4px;
            left: 50%;
            margin-left: -7px;
            width: 14px;
            height: 162px;
            background: url('../Img-Resources/sec.svg') 50% 50% no-repeat;
            z-index: 9;
            -moz-transform-origin: 50% 136px;
            -ms-transform-origin: 50% 136px;
            -o-transform-origin: 50% 136px;
            -webkit-transform-origin: 50% 136px;
            transform-origin: 50% 136px;
        }

            .sec-hand.shadow {
                top: 8px;
                margin-left: -4px;
                background-image: url('../Img-Resources/sec-shdw.svg');
                opacity: .1;
                z-index: 8;
                filter: blur(2px);
            }

        .min-hand {
            position: absolute;
            top: 16px;
            left: 50%;
            margin-left: -8px;
            width: 16px;
            height: 144px;
            background: url('../Img-Resources/min.svg')50% 50% no-repeat;
            z-index: 7;
            -moz-transform-origin: 50% 124px;
            -ms-transform-origin: 50% 124px;
            -o-transform-origin: 50% 124px;
            -webkit-transform-origin: 50% 124px;
            transform-origin: 50% 124px;
        }

            .min-hand.shadow {
                top: 20px;
                margin-left: -5px;
                background-image: url('../Img-Resources/min-shdw.svg');
                opacity: .1;
                z-index: 6;
                filter: blur(2px);
            }

        .hour-hand {
            position: absolute;
            top: 50px;
            left: 50%;
            margin-left: -7px;
            width: 14px;
            height: 110px;
            background: url('../Img-Resources/hour.svg') 50% 50% no-repeat;
            z-index: 5;
            -moz-transform-origin: 50% 90px;
            -ms-transform-origin: 50% 90px;
            -o-transform-origin: 50% 90px;
            -webkit-transform-origin: 50% 90px;
            transform-origin: 50% 90px;
        }

            .hour-hand.shadow {
                top: 54px;
                margin-left: -4px;
                background-image: url('../Img-Resources/hour-shdw.svg');
                opacity: .1;
                z-index: 4;
                filter: blur(2px);
            }

        .twelve,
        .three,
        .six,
        .nine {
            position: absolute;
            font-family: Lato, sans-serif;
            font-size: 32px;
            color: #777;
        }

        .twelve {
            top: 30px;
            left: 117px;
        }

        .three {
            top: 119px;
            right: 37px;
        }

        .six {
            left: 127px;
            bottom: 26px;
        }

        .nine {
            top: 119px;
            left: 37px;
        }

        .diallines {
            position: absolute;
            top: 9px;
            left: 50%;
            margin-left: -3px;
            width: 2px;
            height: 10px;
            background: #b3b3b0;
            z-index: 1;
            -moz-transform-origin: 50% 130px;
            -ms-transform-origin: 50% 130px;
            -o-transform-origin: 50% 130px;
            -webkit-transform-origin: 50% 130px;
            transform-origin: 50% 130px;
        }

            .diallines:nth-of-type(5n) {
                position: absolute;
                top: 5px;
                left: 50%;
                margin-left: -4px;
                width: 4px;
                height: 25px;
                background: #b3b3b0;
                z-index: 1;
                -moz-transform-origin: 50% 135px;
                -ms-transform-origin: 50% 135px;
                -o-transform-origin: 50% 135px;
                -webkit-transform-origin: 50% 135px;
                transform-origin: 50% 135px;
            }

        .date {
            position: absolute;
            top: 242px;
            left: 50%;
            margin-left: -18px;
            width: 36px;
            height: 30px;
            background: #83837a;
            border-radius: 6px;
            font-family: 'Fjalla One', sans-serif;
            font-size: 21px;
            line-height: 30px;
            color: white;
            text-align: center;
            box-shadow: inset 0 2px 2px 0 rgba(0,0,0,.3), inset 0 -2px 2px 0 rgba(255,255,255,.2);
        }

        .digi_clk {
            background-color: black;
            color: white;
        }

        input.atsfield {
            border: 1px solid #5c5 !important;
            font-size: 20px !important;
        }

        .lbl_name {
            font-size: 14px;
            font-weight: bold;
         
        }

        .container {
