    <div class="modal fade" id="announcement_modal" tabindex="-1" role="dialog" aria-labelledby="modalLabelSmall" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-lg" id="">
            <div class="col-lg-12">
                <div class="modal-content modal-content-add-edit">
                    <div class="modal-header navy-bg text-white">
                        <button type="button" class="modalXbtn" data-dismiss="modal" aria-label="Close"><i aria-hidden="true" class="XIcon fa fa-times"></i></button>
                        <center><h1 class="modal-title" id="modalLabelSmall"><b>Announcement!</b></h1></center>
                    </div>
                    <div class="modal-body with-background" style="padding-bottom:5px;padding-top:5px;">
                        <div class="announce-body">
                            <div class="row" ng-repeat="l in announcement">
                                <div class="col-lg-12 col-xs-12 col-sm-12 col-md-12 ">
                                    <p class="para hrline">{{l.rec_no}}. {{l.announcement}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr style="margin-top:5px;margin-bottom:20px;" ng-show="!show_footer" />
                    <div class="modal-footer" ng-show="show_footer" style="padding: 10px 30px 10px 30px !important">
                        <button id="btn_cancel" ng-click="btn_cancel_click()" ng-show="btn_show_cancel" type="button" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Cancel Application"><i class="fa fa-ban"></i> Cancel AS</button>
                        <button id="btn_cancel_pending" ng-click="btn_cancel_pending_click()" ng-show="!btn_show_cancel" type="button" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Cancel Application"><i class="fa fa-ban"></i> Cancel Pending</button>
                        <button id="btn_disapprove" ng-click="btn_disapprove_click()" ng-show="!btn_show_cancel" type="button" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Cancel Application"><i class="fa fa-thumbs-down"></i> Disapprove</button>
                        <button id="btn_approve" ng-click="btn_approve_click()" type="button" class="btn btn-success" ng-show="show_btn_approve" ng-disabled="dis_btn_approve" data-toggle="tooltip" data-placement="top" title="Approved"><i class="fa fa-paper-plane-o"></i>Approved</button>
