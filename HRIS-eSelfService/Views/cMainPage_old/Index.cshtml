    <!-- AS Alert Modal -->
    <div class="modal inmodal" id="myModal2" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content animated flipInY">
                <div class="modal-header red-bg" style="padding:15px 10px 15px 10px;margin:0px;">
                    <span class="fa fa-times pull-right" data-dismiss="modal" style="cursor:pointer;"></span>
                    <h4 class="modal-title"><span class="fa fa-warning"></span> Needs Action!</h4>
                </div>
                <div class="modal-body" >
                    <div class="row" >
                        <div class="col-lg-12">
                            <div class="table-wrapper-scroll-y my-custom-scrollbar">
                                <table class="table table-striped" id="datalist_grid" ng-model="datalist_grid">
                                    <thead>
                                        <tr>
                                            <th width="22%">DATE</th>
                                            <th width="12%">AM IN</th>
                                            <th width="17%">AM OUT</th>
                                            <th width="12%">PM IN</th>
                                            <th width="17%">PM OUT</th>
                                            <th width="20%">ACTION</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer red-bg" style="padding:10px 0px 0px 0px; margin:0px;">
                </div>
            </div>
        </div>
    </div>

    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-4" ng-repeat="lst1 in MenuList" ng-if="lst1.menu_level == 1 && lst1.menu_level ">
                <div class="ibox">
                    <div class="ibox-title" style="cursor:pointer;">

                        <a ng-if="lst2.hasUrl == 1" href="" ng-click="setActive(lst1)">{{lst1.menu_name}}<span class=""></span></a>

                        <a ng-if="lst1.hasUrl == 0" ng-click="collapse(lst1.isOpen,lst1.id,lst1.hasUrl)" class="text-muted">
                            <h5>{{lst1.page_title}}</h5>
                            <span ng-show="!lst1.isOpen" class="fa fa-angle-right pull-right"></span>
                            <span ng-show="lst1.isOpen" class="fa fa-angle-down pull-right"></span>
                        </a>
                        <br />
                        <ul class="tranx nav" ng-show="lst1.isOpen" style="position:absolute !important;z-index:9999;background-color:white !important;float:right !important;width:90% !important;right: 15px;color:dodgerblue !important">
                            <li ng-repeat="lst2 in MenuList" ng-if="lst2.menu_level == 2 && lst2.menu_id_link == lst1.id ">
                                <a ng-if="lst2.hasUrl == 1" href="" ng-click="setActive(lst2)">{{lst2.menu_name}}<span class=""></span></a>
                                <a ng-if="lst2.hasUrl == 0" ng-click="collapse(lst2.isOpen,lst2.id,lst2.hasUrl)">
                                    {{lst2.menu_name}}
                                    <span ng-show="!lst2.isOpen" class="fa fa-angle-right pull-right"></span>
                                    <span ng-show="lst2.isOpen" class="fa fa-angle-down pull-right"></span>
                                </a>
                                <ul class=" nav nav-third-level" ng-show="lst2.isOpen">
                                    <li ng-repeat="lst3 in MenuList" ng-if="lst3.menu_level == 3 && lst2.id == lst3.menu_id_link ">
                                        <a href="" ng-click="setActive(lst3)">{{lst3.menu_name}}</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="ibox-content">
                        <div class="widget style1 navy-bg">
                            <div class="row">
                                <div class="col-xs-4">
                                    <i class="{{lst1.menu_icon}} fa-4x"></i>
                                </div>
                                <div class="col-xs-8 text-right">
                                    <span> {{lst1.page_title}} </span><br />

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

